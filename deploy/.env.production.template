# Production Environment Configuration for Estimaro
# Copy this file to C:\Estimaro\Backend\.env on the server

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Estimaro API
APP_VERSION=1.0.0
DEBUG=False

# =============================================================================
# DATABASE (MongoDB)
# =============================================================================
# Use your MongoDB Atlas connection string or local MongoDB URL
DATABASE_URL=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/estimaro?retryWrites=true&w=majority

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate a strong secret key for production!
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_SECRET_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# SCRAPER ADAPTER TYPES
# =============================================================================
# Options: mock, scraper, remote
# - mock: Fake data (development only)
# - scraper: Local Chrome CDP (same server - NOT for Ubuntu)
# - remote: Call Scraper Microservice on Windows RDP (RECOMMENDED)
LABOR_ADAPTER_TYPE=remote
PARTS_ADAPTER_TYPE=remote
VENDOR_WORLDPAC_ADAPTER_TYPE=remote
VENDOR_SSF_ADAPTER_TYPE=remote
TEKMETRIC_ADAPTER_TYPE=mock

# =============================================================================
# SCRAPER MICROSERVICE (Windows RDP Server)
# =============================================================================
# URL of the Scraper Service running on Windows RDP
SCRAPER_SERVICE_URL=http://WINDOWS_RDP_IP:5000
SCRAPER_API_KEY=estimaro_scraper_secret_2024

# =============================================================================
# VENDOR CREDENTIALS (Required for scraping)
# =============================================================================

# ALLDATA Credentials
ALLDATA_USERNAME=your_alldata_username
ALLDATA_PASSWORD=your_alldata_password

# PartsLink24 Credentials (3 fields required)
PARTSLINK24_COMPANY_ID=your_company_id
PARTSLINK24_USERNAME=your_username
PARTSLINK24_PASSWORD=your_password

# Worldpac Credentials
WORLDPAC_USERNAME=your_worldpac_username
WORLDPAC_PASSWORD=your_worldpac_password

# SSF Credentials  
SSF_USERNAME=your_ssf_username
SSF_PASSWORD=your_ssf_password

# =============================================================================
# TWILIO (Optional - for SMS notifications)
# =============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# CORS / FRONTEND URL
# =============================================================================
# Add your frontend domain here for CORS
PORTAL_BASE_URL=http://your-server-ip

# =============================================================================
# VENDOR SCORING WEIGHTS
# =============================================================================
VENDOR_PRICE_WEIGHT=0.5
VENDOR_DISTANCE_WEIGHT=0.3
VENDOR_QUALITY_WEIGHT=0.2

# =============================================================================
# TAX RATE
# =============================================================================
DEFAULT_TAX_RATE=0.0925
